<view xmlns="http://jmix.io/schema/flowui/view"
        title="msg://UserSessions.view"
        focusComponent="sessionsTable">
    <data readOnly="true">
        <collection id="userSessionsDc"
                    class="io.jmix.audit.entity.UserSession">
            <loader id="userSessionsDl"/>
        </collection>
    </data>

    <layout spacing="true" expand="sessionsTable">
        <formLayout>
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="32em" columns="2"/>
                <responsiveStep minWidth="50em" columns="4"/>
            </responsiveSteps>
            <textField id="userName" datatype="string"
                       label="msg://UserSessions.nameField"/>
            <dateTimePicker id="lastRequestDateFrom" datatype="date"
                        label="msg://UserSessions.lastRequestDateFrom"/>
            <dateTimePicker id="lastRequestDateTo" datatype="date"
                        label="msg://UserSessions.lastRequestDateTo"/>
            <button id="clearButton" text="msg://UserSessions.clear"/>
        </formLayout>
        <hbox id="buttonsPanel" padding="false">
            <button id="refreshBtn" action="sessionsTable.refresh"/>
            <button id="expireBtn" action="sessionsTable.expire"/>
        </hbox>
        <dataGrid id="sessionsTable" minHeight="10em"
            width="100%"
            dataContainer="userSessionsDc"
            selectionMode="MULTI">
            <actions>
                <action id="refresh" type="refresh"/>
                <action id="expire" text="msg://expire" icon="BAN"/>
            </actions>
            <columns>
                <column property="sessionId"/>
                <column property="principalName"/>
                <column property="lastRequest"/>
            </columns>
        </dataGrid>

    </layout>
</view>
