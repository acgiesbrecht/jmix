<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://bulkEditor.caption">
    <actions>
        <action id="applyChanges"
                text="msg:///actions.Apply"
                icon="CHECK"
                shortcutCombination="CONTROL-ENTER"/>
        <action id="cancelChanges"
                text="msg:///actions.Cancel"
                icon="BAN"/>
    </actions>

    <layout expand="fieldLayoutScroller">
        <div id="infoDiv"
             text="msg://bulkEditor.description"
             themeNames="contrast"/>

        <scroller id="fieldLayoutScroller"
                  scrollBarsDirection="VERTICAL"
                  width="100%">
            <formLayout id="fieldLayout"/>
        </scroller>

        <hbox id="buttonsBox"
              spacing="true">
            <button id="applyButton"
                    action="applyChanges"/>
            <button id="cancelButton"
                    action="cancelChanges"/>
        </hbox>
    </layout>
</view>