<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://mbeanOperationResult.title">
    <actions>
        <action id="closeAction" type="view_close" icon="CHECK" text="msg://close"/>
    </actions>
    <layout width="60em">
        <vbox id="resultVBox" expand="resultContainer">
            <progressBar id="taskProgressBar" width="100%" indeterminate="true"/>
            <h4 id="resultTitle"/>
            <scroller id="resultContainer" width="100%" scrollBarsDirection="BOTH"/>
        </vbox>
        <hbox classNames="buttons-panel">
            <button id="closeBtn" action="closeAction"/>
            <button id="exportBtn" icon="DOWNLOAD" text="msg://actions.Export" enabled="false"/>
        </hbox>
    </layout>
</view>