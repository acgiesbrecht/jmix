<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://mbeanDetailView.title">
    <data>
        <instance id="mbeanDc" class="io.jmix.flowui.app.jmxconsole.model.ManagedBeanInfo">
            <collection id="attrDc" property="attributes"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="close" type="detail_discard" text="msg://close"/>
    </actions>
    <layout>
        <span id="mbeanName"/>
        <span id="mbeanClassName"/>
        <span id="mbeanDescription"/>
        <hbox classNames="buttons-panel">
            <button action="attributesDataGrid.refresh"/>
            <button action="attributesDataGrid.edit"/>
        </hbox>
        <split orientation="VERTICAL" width="100%">
            <dataGrid id="attributesDataGrid" dataContainer="attrDc" maxHeight="50em" width="100%">
                <actions>
                    <action id="refresh" text="msg:///actions.Refresh" type="list_refresh"/>
                    <action id="edit" text="msg://attribute.edit" icon="PENCIL" type="list_itemTracking"/>
                </actions>
                <columns>
                    <column property="name"/>
                    <column property="description"/>
                    <column property="type"/>
                    <column property="valueString"/>
                </columns>
            </dataGrid>
            <vbox margin="false" padding="false" width="100%">
                <textField id="operationsSearchField" placeholder="msg://operationsSearchField.placeholder"/>
                <scroller id="scroller" scrollBarsDirection="VERTICAL" width="100%" height="100%">
                    <vbox id="operations" spacing="false" margin="false" padding="false" width="100%"/>
                </scroller>
            </vbox>
        </split>
        <hbox id="detailActions">
            <button id="closeBtn" action="close" themeNames="primary"/>
        </hbox>
    </layout>
</view>