<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://jmxConsoleView.title">
    <data>
        <collection id="mbeanDc" class="io.jmix.flowui.app.jmxconsole.model.ManagedBeanInfo"/>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox>
            <textField id="mbeanSearchField" placeholder="msg://mbeanSearchField.placeholder"/>
            <button id="inspectBtn" action="mbeansDataGrid.inspect"/>
        </hbox>
        <dataGrid id="mbeansDataGrid" dataContainer="mbeanDc">
            <actions>
                <action id="refresh" text="msg://refreshAction.text"/>
                <action id="inspect" type="list_itemTracking" text="msg://inspectAction.text"/>
                <action id="edit" type="list_edit"/>
            </actions>
            <columns>
                <column property="domain"/>
                <column property="objectName"/>
                <column property="description"/>
            </columns>
        </dataGrid>
    </layout>
</view>