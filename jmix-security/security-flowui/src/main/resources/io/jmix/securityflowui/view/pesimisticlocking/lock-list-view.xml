<view xmlns="http://jmix.io/schema/flowui/view" title="msg://lockListView.caption"
        focusComponent="locksTable">

    <data>
        <collection id="locksDs" class="io.jmix.core.pessimisticlocking.LockInfo"/>
    </data>

    <layout spacing="true">
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="locksTable.refresh"/>
            <button action="locksTable.unlock"/>
        </hbox>

        <dataGrid id="locksTable" width="100%" height="100%" dataContainer="locksDs">
            <actions>
                <action id="refresh" text="msg://lockListView.refresh" icon="REFRESH"/>
                <action id="unlock" text="msg://lockListView.unlock"
                        icon="UNLOCK"/>
            </actions>
            <columns>
                <column property="objectId" key="objectIdColumn" header="msg://LockInfo.objectId"/>
                <column property="username" key="usernameColumn" header="msg://LockInfo.username"/>
                <column property="since" key="sinceColumn" header="msg://LockInfo.since"/>
            </columns>
        </dataGrid>
    </layout>
</view>
