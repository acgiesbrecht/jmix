<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
        title="msg://triggerModelEdit.caption"
        focusComponent="form">
    <data>
        <instance id="triggerModelDc"
                  class="io.jmix.quartz.model.TriggerModel"/>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" text="msg:///actions.Ok"
                icon="EDITOR_OK"
                shortcutCombination="${SAVE_SHORTCUT}"/>
        <action id="windowClose"
                text="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <layout spacing="true" expand="editActions">
        <formLayout>
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
                <responsiveStep minWidth="60em" columns="4"/>
            </responsiveSteps>
            <comboBox id="scheduleTypeField" property="scheduleType" required="true"/> <!--  nullOptionVisible="false" -->
            <textField id="cronExpressionField" property="cronExpression" required="true" visible="false"
                       helperText="msg://cronExpressionHelpText"/>
            <textField id="repeatCountField" property="repeatCount" visible="false"/>
            <textField id="repeatIntervalField" property="repeatInterval" required="true" visible="false"/>
            <div classNames="datetime-picker-container">
                <datePicker id="startDateField" datatype="localDate"
                            label="msg://till"/>
                <timePicker id="startTimeField" datatype="localTime"/>
            </div>
            <div classNames="datetime-picker-container">
                <datePicker id="endDateField" datatype="localDate"
                            label="msg://till"/>
                <timePicker id="endTimeField" datatype="localTime"/>
            </div>
            <textField id="triggerNameField" property="triggerName"/>
            <comboBox id="triggerGroupField" property="triggerGroup"/>
        </formLayout>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</view>