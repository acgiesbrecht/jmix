<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://jobModelEdit.caption"
      focusComponent="form">
    <data>
        <instance id="jobModelDc" class="io.jmix.quartz.model.JobModel">
            <collection id="triggerModelDc" property="triggers"/>
            <collection id="jobDataParamsDc" property="jobDataParameters"/>
            <loader id="jobModelDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="viewSaveAndClose" type="detail_saveClose"
                shortcutCombination="${SAVE_SHORTCUT}"/> <!-- primary="true" -->
        <action id="viewClose"
                type="detail_close"/>
    </actions>
    <layout spacing="true">

        <formLayout id="form" dataContainer="jobModelDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="2"/>
                <responsiveStep minWidth="60em" columns="3"/>
            </responsiveSteps>
            <textField id="jobNameField" property="jobName"/>
            <comboBox id="jobClassField" property="jobClass"/>
            <textArea id="jobDescriptionField" property="description"/>
            <comboBox id="jobGroupField" property="jobGroup"/>
            <comboBox id="jobSourceField" property="jobSource"/>

        </formLayout>

        <tabs id="jobDetailsTabs" width="100%">
            <tab id="triggers" label="msg://triggersTabCaption"/>
            <tab id="jobs" label="msg://jobDataParamsTabCaption"/>
        </tabs>

        <vbox id="triggersTab"
              visible="true"
              expand="triggerModelTable"
              padding="false"
              width="100%">
            <hbox classNames="buttons-panel">
                <button action="triggerModelTable.create"/>
                <button action="triggerModelTable.edit"/>
                <button action="triggerModelTable.view"/>
                <button action="triggerModelTable.remove"/>
            </hbox>
            <dataGrid id="triggerModelTable" dataContainer="triggerModelDc" width="100%">
                <actions>
                    <action id="create" type="create">
                        <properties>
                            <property name="openMode" value="DIALOG"/>
                        </properties>
                    </action>
                    <action id="edit" type="edit"/>
                    <action id="view" type="view_close"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column property="triggerName"/>
                    <column property="triggerGroup"/>
                    <column property="scheduleType"/>
                    <column property="scheduleDescription"/>
                    <column property="startDate">
                        <!--                    <formatter>-->
                        <!--                        <date format="msg://dateTimeWithSeconds"/>-->
                        <!--                    </formatter>-->
                    </column>
                    <column property="lastFireDate">
                        <!--                    <formatter>-->
                        <!--                        <date format="msg://dateTimeWithSeconds"/>-->
                        <!--                    </formatter>-->
                    </column>
                    <column property="nextFireDate">
                        <!--                    <formatter>-->
                        <!--                        <date format="msg://dateTimeWithSeconds"/>-->
                        <!--                    </formatter>-->
                    </column>
                </columns>
            </dataGrid>
        </vbox>

        <vbox id="jobDataParamsTab"
              visible="false"
              expand="jobDataParamsTable"
              padding="false"
              width="100%">
            <hbox classNames="buttons-panel">
                <button id="addDataParamButton" themeNames="primary"
                        action="jobDataParamsTable.addNewDataParam"/>
                <button action="jobDataParamsTable.remove"/>
            </hbox>
            <dataGrid id="jobDataParamsTable"
                      dataContainer="jobDataParamsDc" width="100%">
                <actions>
                    <action id="addNewDataParam" text="msg://addNewDataParamCaption"
                            icon="FILE_O"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column property="key" editable="true"/>
                    <column property="value" editable="true"/>
                    <editorActionsColumn>
                        <editButton icon="PENCIL"/>
                        <closeButton icon="CHECK" themeNames="success"/>
                    </editorActionsColumn>
                </columns>
            </dataGrid>
        </vbox>


        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="viewSaveAndClose"/>
            <button id="closeBtn" action="viewClose"/>
        </hbox>

    </layout>
</view>