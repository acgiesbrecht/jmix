
<view xmlns="http://jmix.io/schema/flowui/view"
        title="msg://jobModelEdit.caption"
        focusComponent="form">
    <data>
        <instance id="jobModelDc" class="io.jmix.quartz.model.JobModel">
            <collection id="triggerModelDc" property="triggers"/>
            <collection id="jobDataParamsDc" property="jobDataParameters"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" text="msg://actions.Ok"
                icon="EDITOR_OK"
                shortcutCombination="${COMMIT_SHORTCUT}"/> <!-- primary="true" -->
        <action id="windowClose"
                text="msg://actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <layout spacing="true" expand="jobDetailsTabSheet">

<!--        <form id="form" dataContainer="jobModelDc">-->
<!--            <column width="400px">-->
<!--                <textField id="jobNameField" property="jobName"/>-->
<!--                <comboBox id="jobClassField" property="jobClass"/>-->
<!--                <textArea id="jobDescriptionField" property="description"/>-->
<!--            </column>-->
<!--            <column width="400px">-->
<!--                <comboBox id="jobGroupField" property="jobGroup"/>-->
<!--                <comboBox id="jobSourceField" property="jobSource" editable="false"/>-->
<!--            </column>-->
<!--        </form>-->

        <tabs id="jobDetailsTabSheet">
            <tab id="triggersTabSheet" label="msg://triggersTabCaption"/>
            <tab id="jobDataParamsSheet" label="msg://jobDataParamsTabCaption"/>
        </tabs>
        <vbox id="triggersTableBox"
              expand="triggerModelTable" padding="false">
            <hbox classNames="buttons-panel">
                <button action="triggerModelTable.create"/>
                <button action="triggerModelTable.edit"/>
                <button action="triggerModelTable.view"/>
                <button action="triggerModelTable.remove"/>
            </hbox>
            <dataGrid id="triggerModelTable" dataContainer="triggerModelDc" height="100%" width="100%">
                <actions>
                    <action id="create" type="create">
                        <properties>
                            <property name="openMode" value="DIALOG"/>
                        </properties>
                    </action>
                    <action id="edit" type="edit"/>
                    <action id="view" type="view"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column property="triggerName"/>
                    <column property="triggerGroup"/>
                    <column property="scheduleType"/>
                    <column property="scheduleDescription"/>
                    <column property="startDate">
    <!--                    <formatter>-->
    <!--                        <date format="msg://dateTimeWithSeconds"/>-->
    <!--                    </formatter>-->
                    </column>
                    <column property="lastFireDate">
    <!--                    <formatter>-->
    <!--                        <date format="msg://dateTimeWithSeconds"/>-->
    <!--                    </formatter>-->
                    </column>
                    <column property="nextFireDate">
    <!--                    <formatter>-->
    <!--                        <date format="msg://dateTimeWithSeconds"/>-->
    <!--                    </formatter>-->
                    </column>
                </columns>
            </dataGrid>
        </vbox>

        <vbox id="jobDataParamsTable"
              expand="triggerModelTable" padding="false">
            <hbox classNames="buttons-panel">
                <button id="addDataParamButton"
                        action="jobDataParamsTable.addNewDataParam"/>
                <button action="jobDataParamsTable.remove"/>
            </hbox>
            <dataGrid id="jobDataParamsTable" dataContainer="jobDataParamsDc" height="100%" width="100%">
                <actions>
                    <action id="addNewDataParam" text="msg://addNewDataParamCaption" icon="ADD_ACTION"/> <!-- primary="true" -->
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column property="key"/>
                    <column property="value"/>
                </columns>
            </dataGrid>
        </vbox>


        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>

    </layout>
</view>