<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
        title="msg://jobModelBrowse.caption"
        focusComponent="jobModelsTable">
    <data readOnly="true">
        <collection id="jobModelsDc" class="io.jmix.quartz.model.JobModel"/>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                text="msg:///actions.Select"
                type="lookup_select"
                shortcutCombination="${SAVE_SHORTCUT}"/> <!-- icon="LOOKUP_OK" primary="true" -->
        <action id="lookupCancelAction"
                text="msg:///actions.Cancel"
                type="lookup_discard"/> <!-- icon="LOOKUP_CANCEL" -->
        <action id="applyFilter"
                text="msg:///actions.Apply"
                icon="SEARCH"/>
    </actions>
    <layout expand="jobModelsTable" spacing="true">
        <details id="filterDetails"
                 summaryText="msg://filter"
                 opened="true"
                 width="100%">
            <formLayout>
                <responsiveSteps>
                    <responsiveStep minWidth="0" columns="2"/>
                    <responsiveStep minWidth="60em" columns="4"/>
                </responsiveSteps>
                <textField id="nameField" label="msg://nameContains"/>
                <textField id="groupField" label="msg://groupContains"/>
                <textField id="classField" label="msg://classContains"/>
                <comboBox id="jobStateComboBox" label="msg://jobState"/>
            </formLayout>
            <button id="applyFilterBtn" action="applyFilter"/>
        </details>

<!--        <groupBox id="filter" spacing="true" caption="msg:///filter.emptyConfiguration.name" orientation="horizontal"-->
<!--                  collapsable="true" expand="spring">-->
        <formLayout id="buttonsPanel" classNames="buttons-panel" width="100%">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="2"/>
                <responsiveStep minWidth="40em" columns="4"/>
                <responsiveStep minWidth="60em" columns="7"/>
            </responsiveSteps>

            <button id="createBtn" action="jobModelsTable.create"/>
            <button id="editBtn" action="jobModelsTable.edit"/>
            <button id="removeBtn" action="jobModelsTable.remove"/>
            <button id="refreshBtn" action="jobModelsTable.refresh"/>
            <button id="executeNowBtn" action="jobModelsTable.executeNow"/>
            <button id="activateBtn" action="jobModelsTable.activate"/>
            <button id="deactivateBtn" action="jobModelsTable.deactivate"/>
        </formLayout>

        <dataGrid id="jobModelsTable"
                  dataContainer="jobModelsDc"
                  width="100%">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="executeNow" type="itemTracking" text="msg://io.jmix.quartz.screen.jobs/triggerJob" icon="PLAY_CIRCLE"/>
                <action id="activate" type="itemTracking" text="msg://io.jmix.quartz.screen.jobs/resumeJob" icon="PLAY"/>
                <action id="deactivate" type="itemTracking" text="msg://io.jmix.quartz.screen.jobs/pauseJob" icon="PAUSE"/>
            </actions>
            <columns>
                <column property="jobName"/>
                <column property="jobGroup"/> <!-- collapsed="true" -->
                <column property="jobClass"/>
                <column property="jobState"/>
                <column property="jobSource"/>
                <column property="triggerDescription"/>
                <column property="lastFireDate" >
<!--                    <formatter>-->
<!--                        <date format="msg://dateTimeWithSeconds"/>-->
<!--                    </formatter>-->
                </column>
                <column property="nextFireDate">
<!--                    <formatter>-->
<!--                        <date format="msg://dateTimeWithSeconds"/>-->
<!--                    </formatter>-->
                </column>
                <column property="description"/>
            </columns>
        </dataGrid>

        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</view>