<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://screenCaption">

    <layout expand="fieldsScroller">
        <comboBox id="entitiesLookup" label="msg://selectEntityLabel" width="100%"/>
        <scroller id="fieldsScroller" scrollBarsDirection="VERTICAL"/>
        <hbox id="actionsPanelWrapper" visible="false" alignItems="END">
            <button id="saveBtn" text="msg://saveApplicationSettings" icon="CHECK"/>
            <button id="closeBtn" text="msg://close" icon="BAN"/>
        </hbox>
    </layout>
</view>
